<div id="main-blog">
  <div class="container padding-top">
    <div class="row">
      <%= render partial: '/layouts/sidebar' %>
      <div id="content" class="site-content col-md-8">
        <div class="post">
          <div class="post-content">
            <h2 class="entry-title">
            Menu
            </h2>
            <h4><%= link_to "Users", admin_users_path %> <small>- <%= "#{pluralize(@count, 'user')}" %></small></h4>
            <h4><%= link_to "Posts", admin_posts_dashboard_path %> <small>- <%= "#{pluralize(@post_count, 'post')}" %></small></h4>            
            <div class="row">
              <div class="col-sm-4">Published: <%= link_to "#{pluralize(@published_post_count, 'post')}", admin_posts_path %></div>
              <div class="col-sm-4">Drafts: <%= link_to "#{pluralize(@draft_post_count, 'draft')}", admin_posts_drafts_path %></div>
              <div class="col-sm-4"><%= link_to "New post", new_admin_post_path, class: "btn btn-primary" %></div>
            </div>
          </div>
          <div class="post">
            <div class="post-content">
              <h2 class="entry-title">
              Last Sign Ups
              </h2>
              <ul class="list-unstyled">
                <% @last_signups.each do |user| %>
                <li class="list-padded-bottom">
                  <%= link_to user.email, edit_admin_user_path(user) %><br/>
                  <small><%= time_ago_in_words(user.created_at)%> ago</small>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="post">
            <div class="post-content">
              <h2 class="entry-title">
              Last Sign Ups
              </h2>
              <ul class="list-unstyled">
                <% @last_signins.each do |user| %>
                <li class="list-padded-bottom">
                  <%= link_to user.email, edit_admin_user_path(user) %><br/>
                  <small>
                  <% unless user.last_sign_in_at.nil? %>
                  <%= time_ago_in_words(user.last_sign_in_at)%> ago
                  <% else %>
                  never
                  <% end %>
                  </small>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>