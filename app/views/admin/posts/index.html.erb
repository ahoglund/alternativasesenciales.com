<%= render partial: "admin/base/page_header", locals: { header_title: "Posts"} %>
  <%= link_to "New post", new_admin_post_path, class: "btn btn-primary" %>
<p class="pagination-summary"><%= page_entries_info @posts %></p>
<%= paginate @posts %>
<ul class="fa-ul">
  <% @posts.each do |post| %>
  <li class="margin-md-down">
    <i class="fa fa-arrow-circle-o-right small"></i>&nbsp;&nbsp;
    <%= link_to post.title, edit_admin_post_path(post.slug) %> <br/>
    <small class="x-small-text">about <%= time_ago_in_words(post.updated_at) %> ago</small>
  </li>
  <% end %>
</ul>
<%= paginate @posts %>
