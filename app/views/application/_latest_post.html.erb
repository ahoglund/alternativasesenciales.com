<div class="media">
	<div class="pull-left">
		<%= link_to latest_post do %>
          <%= image_tag(latest_post.image_url(:latest_post_thumb).to_s, class: "img-responsive") %>
		<% end %>
	</div>
	<div class="media-body">
		<h4 class="entry-title"><a href="#"><%= latest_post.title %></a></h4>
		<div class="entry-meta small">
			<p><i class="fa fa-calendar"></i><%= time_ago_in_words(latest_post.updated_at) %></p>
		</div>
	</div>
</div>